    "@types/body-parser": "1.19.0",
    "@types/cors": "2.8.8",
    "@types/express": "4.17.8",
    "@types/jest": "^27.4.1",
    "@types/mock-req-res": "^1.1.3",
    "@types/morgan": "1.9.1",
    "@types/node": "14.11.8",
    "@types/supertest": "2.0.10",
    "babel-jest": "^27.5.1",
    "jest": "^27.5.1",
    "mock-req-res": "^1.2.0",
    "nodemon": "2.0.4",
    "supertest": "5.0.0",
    "ts-jest": "^27.1.3",
    "ts-node": "9.0.0",
